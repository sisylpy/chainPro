<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.grain.dao.CkPickDao">

	<select id="queryObject" resultType="com.grain.entity.CkPickEntity">
		select * from ck_pick where pick_id = #{value}
	</select>

	<select id="queryList" resultType="com.grain.entity.CkPickEntity">
		select * from ck_pick 
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="queryTotal" resultType="int">
		select count(*) from ck_pick 
	</select>
	 
	<insert id="save" parameterType="com.grain.entity.CkPickEntity">
		insert into ck_pick
		(
			`pick_id`, 
			`p_apply_id`, 
			`pick_number`, 
			`p_user_id`, 
			`pick_time`, 
			`pick_status`
		)
		values
		(
			#{pickId}, 
			#{pApplyId}, 
			#{pickNumber}, 
			#{pUserId}, 
			#{pickTime}, 
			#{pickStatus}
		)
	</insert>
	 
	<update id="update" parameterType="com.grain.entity.CkPickEntity">
		update ck_pick 
		<set>
			<if test="pApplyId != null">`p_apply_id` = #{pApplyId}, </if>
			<if test="pickNumber != null">`pick_number` = #{pickNumber}, </if>
			<if test="pUserId != null">`p_user_id` = #{pUserId}, </if>
			<if test="pickTime != null">`pick_time` = #{pickTime}, </if>
			<if test="pickStatus != null">`pick_status` = #{pickStatus}</if>
		</set>
		where pick_id = #{pickId}
	</update>
	
	<delete id="delete">
		delete from ck_pick where pick_id = #{value}
	</delete>
	
	<delete id="deleteBatch">
		delete from ck_pick where pick_id in 
		<foreach item="pickId" collection="array" open="(" separator="," close=")">
			#{pickId}
		</foreach>
	</delete>

</mapper>